{
  "private": true,
  "name": "frontend.workflow",
  "homepage": "http://github.com/mothsART",
  "description": "My reproductible workflow",
  "authors": "Jérémie Ferry",
  "repository": "",
  "license": "bsd",
  "engines": {
    "node": ">=4.2.0",
    "npm": ">=3.0.0"
  },
  "dependencies": {
    "normalize.css": "^4.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-eslint": "^5.0.4",
    "babel-polyfill": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-1": "^6.5.0",
    "cssnano": "^3.6.2",
    "eslint": "^1.10.0",
    "fs-extra": "^0.30.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-concat": "^2.6.0",
    "gulp-cssbeautify": "^0.1.3",
    "gulp-csscomb": "^3.0.7",
    "gulp-csslint": "^0.3.0",
    "gulp-eslint": "^2.0.0",
    "gulp-load-plugins": "^1.2.2",
    "gulp-postcss": "^6.1.1",
    "gulp-riot": "^0.5.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^1.5.3",
    "postcss": "^5.0.21",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^2.5.2",
    "postcss-import": "^7.1.3",
    "postcss-loader": "^0.7.0",
    "postcss-reporter": "^1.3.3",
    "postcss-url": "^5.1.2",
    "jquery": "^2.2.4"
  },
  "scripts": {
    "start": "gulp watch",
    "build": "gulp",
    "pretest": "gulp qa",
    "test": "npm run test",
    "deploy": "./scripts/deploy.sh"
  },
  "babel": {
    "presets": [
      "babel-preset-es2015",
      "babel-preset-stage-1"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "rules": {
      "no-console": 0,
      "indent": [
        2,
        2
      ],
      "max-len": [
        2,
        80,
        4
      ],
      "no-multiple-empty-lines": [
        2,
        {
          "max": 1
        }
      ],
      "quotes": [
        2,
        "double"
      ],
      "jsx-quotes": [
        2,
        "prefer-double"
      ],
      "semi": [
        2,
        "never"
      ],
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "comma-style": [
        2,
        "last"
      ],
      "brace-style": [
        2,
        "stroustrup"
      ],
      "dot-location": [
        2,
        "property"
      ],
      "computed-property-spacing": [
        2,
        "never"
      ],
      "object-curly-spacing": [
        2,
        "always"
      ],
      "array-bracket-spacing": [
        2,
        "always"
      ],
      "space-before-function-paren": [
        0,
        "never"
      ],
      "space-in-parens": [
        2,
        "never"
      ],
      "space-unary-ops": [
        2,
        {
          "words": true,
          "nonwords": false
        }
      ],
      "spaced-comment": [
        2,
        "always"
      ],
      "one-var": [
        2,
        "never"
      ],
      "no-var": [
        2
      ],
      "no-bitwise": [
        2
      ],
      "prefer-const": [
        2
      ]
    }
  }
}
